{
  "name": "@myflags/core",
  "version": "0.2.0",
  "description": "Core SDK for MyFlags feature flag management",
  "author": "MyFlags Team",
  "license": "MIT",
  "homepage": "https://github.com/myflags/sdk#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/myflags/sdk.git",
    "directory": "packages/core"
  },
  "keywords": [
    "feature-flags",
    "feature-toggles",
    "flags",
    "sdk"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
